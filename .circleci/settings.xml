<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <server>
            <id>leaflet-internal</id>
            <username>${LEAFLET_INTERNAL_REPO_USERNAME}</username>
            <password>${LEAFLET_INTERNAL_REPO_PASSWORD}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>use-leaflet-internal-repository</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <altDeploymentRepository>leaflet-internal::default::${LEAFLET_INTERNAL_REPO_HOST}</altDeploymentRepository>
            </properties>
            <repositories>
                <repository>
                    <id>central</id>
                    <name>Central Repository</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <layout>default</layout>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>leaflet-internal</id>
                    <name>Leaflet Internal Repository</name>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <layout>default</layout>
                    <url>${LEAFLET_INTERNAL_REPO_HOST}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>